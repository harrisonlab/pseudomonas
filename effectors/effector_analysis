# Blast each strains effectors for each family against each other in order to work out identical ones e.g. 5244 hopA1-1, hopA1-2. Then use python to remove those that are duplicated, leaving the longest version

for family in $(cat /home/hulinm/pseudomonas_data/pseudomonas/analysis/effector2016/new/families ); do

for GENOME in /home/hulinm/pseudomonas_data/pseudomonas/assembly/111_genomes/*.fa ; do
    GENOME_FILE=$(basename $GENOME)
    GENOME_SHORT=$(echo $GENOME_FILE | sed s/.fa//g)


for fasta in /home/hulinm/pseudomonas_data/pseudomonas/analysis/effector2016/new/effector_families/"$family"/"$GENOME_SHORT"_"$family"* ; do
  echo $fasta
  file=$(basename $fasta)
  fasta_short=$(echo $file | sed s/.fa//g)
  fgenome=$(echo $fasta_short | rev | cut -d '_' -f2- | rev )

  for query in /home/hulinm/pseudomonas_data/pseudomonas/analysis/effector2016/new/effector_families/"$family"/"$GENOME_SHORT"_"$family"* ; do
    echo $query
    file=$(basename $query)
    query_short=$(echo $file | sed s/.fa//g)
    q_genome=$(echo $query_short | rev | cut -d '_' -f2- | rev )

/home/hulinm/git_repos/tools/pathogen/blast/blast2csv.pl  $fasta blastn $query  1 > /home/hulinm/pseudomonas_data/pseudomonas/analysis/effector2016/new/effector_families/"$family"/blast/"$fasta_short"_"$query_short"

done
done
done
done

