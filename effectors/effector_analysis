    EFFECTOR_SHORT=$(echo $EFFECTOR_FILE | sed s/.fasta//g)
sort -n -r  -k8 /home/hulinm/pseudomonas_data/pseudomonas/analysis/effector2016/new/"$EFFECTOR_SHORT"/output/"$GENOME_SHORT"_"$EFFECTOR_SHORT" | sed '/^$/d' | sort --stable -n -r -k9 |  head -n1  > /home/hulinm/pseudomonas_data/pseudomonas/analysis/effector2016/new/"$EFFECTOR_SHORT"/output/besthit/"$GENOME_SHORT"_"$EFFECTOR_SHORT"
