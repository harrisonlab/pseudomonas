# Commands to pull out nucleotide sequences of effectors from all 111 genomes
# Align all homologs in each effector family using ClustalW2
# Produce phylogeny using FastTree
# Colour cherry pathogen groups ready to open and annotate with Dendroscope


#Rename contigs in fasta files

for GENOME in /home/hulinm/pseudomonas_data/pseudomonas/assembly/111_genomes/*.fasta ; do
 GENOME_FILE=$(basename $GENOME)
 GENOME_SHORT=$(echo $GENOME_FILE | sed s/.fasta//g)
 echo $GENOME_SHORT

 python /home/hulinm/git_repos/tools/analysis/python_effector_scripts/rename.py -i $GENOME -o "$GENOME_SHORT".fa


# Run blast for effectors on all genomes

 for GENOME in /home/hulinm/pseudomonas_data/pseudomonas/assembly/111_genomes/*.fa ; do
     GENOME_FILE=$(basename $GENOME)
     GENOME_SHORT=$(echo $GENOME_FILE | sed s/.fa//g)
     echo $GENOME_SHORT


 for EFFECTOR in /home/hulinm/git_repos/tools/analysis/effector_detection/pathogen/effector_detector/effectorfiles/effectors/fastafiles/files/families/*.fasta; do
     EFFECTOR_FILE=$(basename $EFFECTOR)
     EFFECTOR_SHORT=$(echo $EFFECTOR_FILE | sed s/.fasta//g)
     echo $EFFECTOR_SHORT
  #  mkdir $EFFECTOR_SHORT

 /home/hulinm/git_repos/tools/pathogen/blast/blast2csv.pl  $EFFECTOR tblastn $GENOME  5  > /home/hulinm/pseudomonas_data/pseudomonas/analysis/effector2016/new/"$EFFECTOR_SHORT"/"$GENOME_SHORT"_"$EFFECTOR_SHORT"
 sed -i -e "1d" /home/hulinm/pseudomonas_data/pseudomonas/analysis/effector2016/new/"$EFFECTOR_SHORT"/"$GENOME_SHORT"_"$EFFECTOR_SHORT"


